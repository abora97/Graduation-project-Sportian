<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/laySport"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.fragment.SportFragment">


    <LinearLayout
        android:id="@+id/laysport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:text="Enter Sport"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />
        <Spinner
            android:id="@+id/spinnerSport"
            android:layout_width="160dp"
            android:layout_height="25dp"
            android:background="@drawable/list"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:text="Enter Distance"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinnerDistance"
            android:layout_width="160dp"
            android:layout_height="25dp"
            android:background="@drawable/listkm"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp">

        <TextView
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:text="Enter Location"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="25dp"
            android:background="@drawable/round_button"
            android:gravity="center">
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Location"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:src="@drawable/ic_my_location_24px" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/laySearch"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:background="@drawable/round_button"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="60dp">
        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="Search"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:src="@drawable/ic_search" />

    </LinearLayout>


</LinearLayout>
